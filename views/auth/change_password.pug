extends ../partials/head
block content
  input.display-none#email(type="text" value=email)
  input.display-none#code(type="text" value=code)
  .brand-wrapper
    a.main-page-button(href=language_key ? "/?lang=" + language_key : "/")
      img(src="/res/images/logo.png" alt="usersmagic tester")
    .language-change-wrapper
      a.language-text(href=`/auth/change_password?email=${email}&code=${code}lang=tr`) TR
      span |
      a.language-text(href=`/auth/change_password?email=${email}&code=${code}lang=en`) EN
  .all-wrapper
    form.all-inner-wrapper.change-password-form
      span.logo-name usersmagic
      input.general-input-with-border#password-input(type="password" placeholder=__('Password') autofocus autocomplete="off")
      input.general-input-with-border#confirm-password-input(type="password" placeholder=__('Confirm Password') autocomplete="off")
      button.general-seablue-button
        span #{__('Reset Password')}
      span.error-text#bad-request-error #{__('Please write a 6 digits long password and confirm')}
      span.error-text#request-timeout-error #{__('Your request for changing your password has passed 1 hour. Please make a new request.')}
      span.error-text#network-error #{__('Please check your internet connection and try again')}
      span.error-text#unknown-error #{__('An unknown error occured, please try again later')}
    .bottom-wrapper
      span.copyright-text Copyright 2021 - #{__('Loy Yazılım')}
